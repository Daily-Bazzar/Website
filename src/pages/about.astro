---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import TeamGrid from '@components/sections/TeamGrid.astro';
import aboutImage from '@assets/images/home/heroimage.jpg';

const seoTitle = "About Us - DailyBazzar";
const seoDescription = "Learn about the problem we're solving and meet the team behind DailyBazzar.";

const heroContent = {
    title: "About Us",
    description: "Connecting your town's trusted services in one app."
};

const aboutSection = {
    eyebrow: "OUR MISSION",
    headline: "Solving Local Service Fragmentation",
    // subheadline: "Why DailyBazzar?",
    description: `In every town, finding reliable local services—like shops, maids, plumbers, and more—can be a challenge. Information is scattered, reviews are unreliable, and booking is often a hassle. DailyBazzar solves this by bringing all your town's trusted services into one easy-to-use app. Discover, book, and track local services with confidence, all in one place. Support your community and simplify your life with DailyBazzar.`,
    image: {
        src: aboutImage,
        alt: "Community and local services"
    },
    buttons: [
        {
            text: "Contact Us",
            link: "/contact",
            variant: "primary" as const
        }
    ]
};
---

<Layout title={seoTitle} description={seoDescription}>
    <!-- <InnerHero content={heroContent} /> -->
    <SplitPanel content={aboutSection} imagePosition="right" background="light" padding="base" />
    <div class="w-full flex gap-8 p-8 bg-linear-to-br from-secondary to-primary">
        <div class="flex flex-col items-center justify-center gap-6 px-4 py-4 w-full bg-white/25 rounded-2xl aspect-video backdrop-blur-xl text-white">
            <h1 class="text-4xl font-semibold">Mission Statement</h1>
            <p class="text-center text-balance">
                Our mission is to empower and connect local vendors with customers through a seamless digital platform, making essential daily and household services—such as electricians, plumbers, maids, nannies, and drivers—easily accessible. We aim to simplify everyday life while uplifting local economies and fostering community convenience.
            </p>
            <!-- <button>Start Shopping</button> -->
        </div>
        <div class="flex flex-col items-center justify-center gap-6 px-4 py-4 w-full bg-white/25 rounded-2xl aspect-video backdrop-blur-xl text-white">
            <h1 class="text-4xl font-semibold">Vision Statement</h1>
            <p class="text-center text-balance">
                Our mission is to empower and connect local vendors with customers through a seamless digital platform, making essential daily and household services—such as electricians, plumbers, maids, nannies, and drivers—easily accessible. We aim to simplify everyday life while uplifting local economies and fostering community convenience.
            </p>
            <!-- <button>Start Shopping</button> -->
        </div>
        <!-- <div class="w-full bg-white/25 rounded-2xl aspect-video backdrop-blur-xl">
        </div> -->
    </div>
    <section class="site-container mx-auto px-4 py-8">
        <!-- <h2 class="text-3xl font-bold mb-8 text-center">Meet the Team</h2> -->
        <TeamGrid padding="base" />
    </section>
</Layout> 