                    email="lakhyajit.dailybazzar@gmail.com"
                />
                <TeamCard
                    name="Keshab Kayal"
                    role="App Developer"
                    image="/src/assets/team/keshab.jpg"
                    linkedin="https://www.linkedin.com/in/keshab-kayal-2a65a8343?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app"
                    email="Keshab.dailybazzar@gmail.com"
                />
            </div>
        </div>
        <div class="w-full max-w-4xl my-8">
            <h2 class="text-xl font-medium mb-8 text-center">
                Meet the Design Team
            </h2>
            <div class="flex justify-center items-center gap-4">
                <TeamCard
                    name="Bivob Bhuyan"
                    role="Chief Designer"
                    image="/src/assets/team/bivob.jpeg"
                    linkedin="https://www.linkedin.com/in/benjamin-doley-a51827238/"
