---
import { siteConfig } from '../config/siteConfig';
const { companyName, Socials } = siteConfig;
const year = new Date().getFullYear();
---

<div>
  <footer class="w-full bg-white/90 border-t border-[#e6e6e6] py-8 px-24 mt-16 relative z-10">
    <div class="mx-auto grid grid-cols-1 md:grid-cols-4 items-center justify-between gap-6">
      <div class="flex flex-col items-center md:items-start">
        <span class="text-xl font-[Noto_Serif_Display] text-[#004346] font-bold">{companyName}</span>
        <span class="text-sm text-slate-600 mt-1">{Socials.Location}</span>
        <span class="text-sm text-slate-600">
          <a href={`mailto:${Socials.Email}`} class="hover:text-[#0E5376] underline">{Socials.Email}</a> | {Socials.Phone}
        </span>
      </div>
      <div class="flex flex-col items-center md:items-start md:col-span-2">
        <span class="text-lg font-semibold text-[#004346] mb-2">Quick Links</span>
        <a href="#waitlist" class="hover:text-[#0E5376] underline text-sm mb-1">Join the Waitlist</a>
        <a href="#list-business" class="hover:text-[#0E5376] underline text-sm mb-1">List Your Business</a>
        <a href="#about" class="hover:text-[#0E5376] underline text-sm mb-1">About Us</a>
        <a href="#contact" class="hover:text-[#0E5376] underline text-sm mb-1">Contact Us</a>
        <a href="#blogs" class="hover:text-[#0E5376] underline text-sm">Blogs</a>
      </div>
      <div class="flex gap-4 flex-wrap items-center justify-center">
        <a href={Socials.xSocial} target="_blank" rel="noopener" class="hover:text-[#0E5376] underline text-sm">X</a>
        <a href={Socials.Github} target="_blank" rel="noopener" class="hover:text-[#0E5376] underline text-sm">GitHub</a>
        <a href={Socials.Instagram} target="_blank" rel="noopener" class="hover:text-[#0E5376] underline text-sm">Instagram</a>
        <a href={Socials.LinkedIn} target="_blank" rel="noopener" class="hover:text-[#0E5376] underline text-sm">LinkedIn</a>
      </div>
    </div>
    <div class="text-center text-xs text-slate-400 mt-6">
      &copy; {year} {companyName}. All rights reserved.
    </div>
  </footer>
</div> 