---
import ServiceCard from "./ServiceCard.astro";

const services = [
  { title: 'Plumber', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'Carpenter', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'Electrician', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'Painter', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'Cleaner', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'Gardener', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'AC Repair', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'Cook', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'Driver', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
  { title: 'Babysitter', img: 'https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' },
];
---
<section class="bg-white py-24 px-8 md:px-20">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-[#204040] text-4xl font-[Noto_Serif_Display] mb-10">Avail home services<br/>at low cost</h2>
    <div class="relative overflow-x-hidden overflow-y-visible">
      <div class="flex gap-10 animate-scroll-horizontal whitespace-nowrap" style="animation: scroll-horizontal 90s linear infinite;">
        {services.concat(services).map(service => (
          <ServiceCard title={service.title} img={service.img} />
        ))}
      </div>
    </div>
  </div>
  <style>
    @keyframes scroll-horizontal {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
    .animate-scroll-horizontal {
      width: max-content;
    }
  </style>
</section> 