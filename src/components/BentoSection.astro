---
const bentoItems = [
  {
    title: 'Empowering',
    subtitle: 'Local Businesses',
    img: '/assets/bento01.png',
    bg: 'bg-[#0a1a1a]'
  },
  {
    title: 'Simplifying',
    subtitle: 'Your lives',
    img: '/assets/bento02.png ',
    bg: 'bg-[#0a1a1a]'
  },
  {
    title: 'Accessible',
    subtitle: 'Everyone can access the shops',
    img: '/assets/bento03.png',
    bg: 'bg-[#101a1a]'
  },
  {
    title: 'Tier 2 & Tier 3 cities',
    subtitle: 'We got you covered',
    img: '/assets/bento04.png',
    bg: 'bg-[#181a10]'
  },
];
---
<section class="w-full py-16 px-4 bg-gradient-to-b from-[#fafdff] to-[#e6faff]">
  <div class="max-w-6xl mx-auto relative">
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[60%] h-[50%] rounded-full bg-[#919191] blur-[250px] z-0 pointer-events-none"></div>
    <div class="flex items-center justify-center gap-3 mb-10 relative z-10 overflow-auto">
      <div class="h-[2px] w-48 rounded-full bg-gradient-to-l from-[#1AF4FE] to-transparent flex-shrink-0"></div>
      <h2 class="font-[Urbanist] text-[#204040] text-xl md:text-2xl font-semibold text-center whitespace-nowrap">For you and the people</h2>
      <div class="h-[2px] w-48 rounded-full bg-gradient-to-r from-[#1AF4FE] to-transparent flex-shrink-0"></div>
    </div>
    <div class="hidden md:grid grid-cols-12 grid-rows-2 gap-6 max-w-4xl mx-auto relative z-10">
      <div class="col-span-7 row-span-1 rounded-xl overflow-hidden shadow-lg flex flex-col justify-between min-h-[220px] p-6 relative bg-[#0a1a1a]" style={`background: url('${bentoItems[0].img}') center/cover no-repeat;`}>
        <div class="absolute inset-0 bg-black/50 z-0"></div>
        <div class="z-10 relative">
          <h3 class="text-2xl md:text-3xl font-[Noto_Serif_Display] mb-2 text-[#f9f7e8]">{bentoItems[0].title}</h3>
          <p class="text-lg md:text-xl text-[#f9f7e8] opacity-80">{bentoItems[0].subtitle}</p>
        </div>
      </div>
      <div class="col-span-5 row-span-1 rounded-xl overflow-hidden shadow-lg flex flex-col justify-between min-h-[220px] p-6 relative bg-[#0a1a1a]" style={`background: url('${bentoItems[1].img}') center/cover no-repeat;`}>
        <div class="absolute inset-0 bg-black/50 z-0"></div>
        <div class="z-10 relative">
          <h3 class="text-2xl md:text-3xl font-[Noto_Serif_Display] mb-2 text-[#f9f7e8]">{bentoItems[1].title}</h3>
          <p class="text-lg md:text-xl text-[#f9f7e8] opacity-80">{bentoItems[1].subtitle}</p>
        </div>
      </div>
      <div class="col-span-5 row-span-1 rounded-xl overflow-hidden shadow-lg flex flex-col justify-between min-h-[220px] p-6 relative bg-[#101a1a]" style={`background: url('${bentoItems[2].img}') center/cover no-repeat;`}>
        <div class="absolute inset-0 bg-black/50 z-0"></div>
        <div class="z-10 relative">
          <h3 class="text-2xl md:text-3xl font-[Noto_Serif_Display] mb-2 text-[#f9f7e8]">{bentoItems[2].title}</h3>
          <p class="text-lg md:text-xl text-[#f9f7e8] opacity-80">{bentoItems[2].subtitle}</p>
        </div>
      </div>
      <div class="col-span-7 row-span-1 rounded-xl overflow-hidden shadow-lg flex flex-col justify-between min-h-[220px] p-6 relative bg-[#181a10]" style={`background: url('${bentoItems[3].img}') center/cover no-repeat;`}>
        <div class="absolute inset-0 bg-black/50 z-0"></div>
        <div class="z-10 relative">
          <h3 class="text-2xl md:text-3xl font-[Noto_Serif_Display] mb-2 text-[#f9f7e8]">{bentoItems[3].title}</h3>
          <p class="text-lg md:text-xl text-[#f9f7e8] opacity-80">{bentoItems[3].subtitle}</p>
        </div>
      </div>
    </div>
    <!-- Mobile stacked version -->
    <div class="md:hidden flex flex-col gap-6">
      {bentoItems.map(item => (
        <div class={`rounded-xl overflow-hidden shadow-lg flex flex-col justify-between min-h-[220px] p-6 relative ${item.bg}`} style={`background: url('${item.img}') center/cover no-repeat;`}>
          <div class="absolute inset-0 bg-black/50 z-0"></div>
          <div class="z-10 relative">
            <h3 class="text-2xl font-[Noto_Serif_Display] mb-2 text-[#f9f7e8]">{item.title}</h3>
            <p class="text-lg text-[#f9f7e8] opacity-80">{item.subtitle}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 